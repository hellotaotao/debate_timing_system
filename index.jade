doctype html
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1.0', name='viewport')
    title 华语辩论计时系统 -- by CCDD
    link(href='css/foundation.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    link(rel='stylesheet', href='//cdn.jsdelivr.net/flat-ui/2.0/css/flat-ui.css')
    script(src='js/vendor/modernizr.js')
    script(src='js/vendor/moment.js')
  body
    nav.top-bar
      .row
        .medium-6.columns
          .text-white.right
            | 正方
          br
          .debate-topic.right.button.round
            | 应该支持XXXXOOOO
        .medium-6.columns
          | 反方
          br
          .debate-topic.left.button.round
            | 应该反对XXXXOOOO

    .tabs-content
      #panel1.content.active
        .row.text-center
          h4 一辩陈词环节，双方各4分钟
        .row
          .small-12.columns.clearfix
            .stopwatch
              include jade/stopwatch_first
      #panel2.content
        .row.text-center
          h4 二辩对辩环节,双方各xx分xx秒
        .row
          include jade/second_timer
        .row.stopwatch
          include jade/stopwatch_second
      #panel3.content
        .row.text-center
          h4 三辩质询环节,双方各xx分xx秒
        .row
          .small-12.columns.clearfix
            .stopwatch
              include jade/stopwatch_third_ask
          .small-12.columns.clearfix
            .stopwatch
              include jade/stopwatch_third_conclude
      #panel4.content
        .row.text-center
          h4 自由辩论环节,双方各xx分xx秒
        .row
          include jade/free_timer
      #panel5.content
        .row.text-center
          h4 四辩总结环节,双方各xx分xx秒
        .row
          .small-12.columns.clearfix
            #final_left.stopwatch
              include jade/stopwatch_final
    #tab-nav
      ul.tabs(data-tab='')
        li.tab-title.active
          a(href='#panel1') 一辩陈词
        li.tab-title
          a(href='#panel2') 二辩对辩
        li.tab-title
          a(href='#panel3') 三辩质询
        li.tab-title
          a(href='#panel4') 自由辩论
        li.tab-title
          a(href='#panel5') 四辩结辩


script(src='js/variables.js')
script(src='js/vendor/jquery.js')
script(src='js/foundation.min.js')
script(src='js/script.js')
script(src='js/secondDebate.js')
script(src='js/freeDebate.js')


script.
  $(document).foundation();
