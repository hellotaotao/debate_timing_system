.flex-container
    #left.time-container
        input.toggle.btn.btn-lg.btn-primary.btn-block(type='button', value='Player 1')
        span.time
    #controls.time-container
        .form-group
            input#time-input.form-control(type='number', placeholder='Minutes', min='1', value='20')
            input#pause.form-control.btn.btn-block.btn-default(type='button', value='Pause')
            input#reset.btn.btn-block.btn-danger(type='button', value='Reset')

    #right.time-container
        input.toggle.btn.btn-lg.btn-primary(type='button', value='Player 2')
        span.time