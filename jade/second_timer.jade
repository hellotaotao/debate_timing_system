.flex-container
    #second-left.time-container
        input.toggle.btn.btn-lg.btn-primary.btn-block(type='button', value='正方')
        span.time
    #second-controls.time-container
        .form-group
            input#second-time-input.form-control(type='number', placeholder='Minutes', min='1', value='20')
            input#second-pause.form-control.btn.btn-block.btn-default(type='button', value='Pause')
            input#second-reset.btn.btn-block.btn-danger(type='button', value='Reset')

    #second-right.time-container
        input.toggle.btn.btn-lg.btn-primary(type='button', value='反方')
        span.time